<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Users.CategoryActivity">


    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите категорию"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/slogan">

        <ImageView
            android:id="@+id/acu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/acu"
            android:layout_margin="10dp"
            />


        <ImageView
            android:id="@+id/mic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mic"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/game"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/game"
            android:layout_margin="10dp"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_line"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Акустика"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Микрофоны"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="42dp"
            />

        <TextView

            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Гарнитуры"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/second_text">

        <ImageView
            android:id="@+id/vinil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/vinil"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/custom"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/custom"
            android:layout_margin="10dp"
            />

        <ImageView
            android:id="@+id/cabel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cabel"
            android:layout_margin="10dp"

            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/third_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_line"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Винил"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="70dp"
            />

        <TextView

            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Аксессуары"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            />

    </LinearLayout>



</RelativeLayout>